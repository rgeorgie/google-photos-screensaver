# /etc/systemd/system/gphotos-screensaver.service
[Unit]
Description=Google Photos Screensaver (Flask Picker API)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=<<YOUR USERNAME>>
WorkingDirectory=/home/<<YOUR USERNAME>>/google-photos-screensaver
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/<<YOUR USERNAME>>/google-photos-screensaver/.venv/bin/python app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
